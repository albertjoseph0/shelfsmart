# Option 2: Read secrets via a command
# RAILS_MASTER_KEY=$(cat config/master.key)

# Option 3: Read secrets via kamal secrets helpers
# These will handle logging in and fetching the secrets in as few calls as possible
# There are adapters for 1Password, LastPass + Bitwarden

# Fetch secrets from shelfsmart project
SECRETS=$(kamal secrets fetch --adapter bitwarden-sm 2e8c9b98-d8a9-4907-a153-b2cb00e6a999/all)

# Extract the secret
OPENAI_API_KEY=$(kamal secrets extract OPENAI_API_KEY $SECRETS)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=$(kamal secrets extract NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY $SECRETS)
CLERK_SECRET_KEY=$(kamal secrets extract CLERK_SECRET_KEY $SECRETS)
CLERK_WEBHOOK_SIGNING_SECRET=$(kamal secrets extract CLERK_WEBHOOK_SIGNING_SECRET $SECRETS)
NEXT_PUBLIC_BASE_URL=$(kamal secrets extract NEXT_PUBLIC_BASE_URL $SECRETS)
STRIPE_PUBLIC_KEY=$(kamal secrets extract STRIPE_PUBLIC_KEY $SECRETS)
STRIPE_SECRET_KEY=$(kamal secrets extract STRIPE_SECRET_KEY $SECRETS)
STRIPE_WEBHOOK_SECRET=$(kamal secrets extract STRIPE_WEBHOOK_SECRET $SECRETS)
NEXT_PUBLIC_STRIPE_SAVANT_PRICE_ID=$(kamal secrets extract NEXT_PUBLIC_STRIPE_SAVANT_PRICE_ID $SECRETS)
NEXT_PUBLIC_STRIPE_SCHOLAR_PRICE_ID=$(kamal secrets extract NEXT_PUBLIC_STRIPE_SCHOLAR_PRICE_ID $SECRETS)
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID=$(kamal secrets extract NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID $SECRETS)
NEXT_PUBLIC_STRIPE_MANAGE_SUBSCRIPTION_URL=$(kamal secrets extract NEXT_PUBLIC_STRIPE_MANAGE_SUBSCRIPTION_URL $SECRETS)
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=$(kamal secrets extract NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL $SECRETS)
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=$(kamal secrets extract NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL $SECRETS)
KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract KAMAL_REGISTRY_PASSWORD $SECRETS)
DATABASE_URL=$(kamal secrets extract DATABASE_URL $SECRETS)

